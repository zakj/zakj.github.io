doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    if pageTitle
      title= pageTitle
    else
      title= site.title
    if description
      meta(name="description", content=description)
    meta(name="viewport", content="initial-scale=1")
    link(href="/main.css", rel="stylesheet")
    link(href="http://fonts.googleapis.com/css?family=Unica+One|PT+Serif:400italic,400", rel="stylesheet")
  body!= contents


