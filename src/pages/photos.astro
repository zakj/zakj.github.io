---
import Photos_ from '$components/Photos.svelte';
import Base from '$layouts/Base.astro';
import { getCollection } from 'astro:content';

const photos = (await getCollection('photos')).map((entry) => ({
  ...entry.data,
  tags: new Set(entry.data.tags),
}));
---

<Base title="Photos" description="My local Instagram.">
  <Photos_ images={photos} client:idle />
</Base>
