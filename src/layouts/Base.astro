---
import PreloadFont from '$components/PreloadFont.astro';
import '$reset.css';
import '@fontsource-variable/crimson-pro';
import fontCrimsonPro from '@fontsource-variable/crimson-pro/files/crimson-pro-latin-wght-normal.woff2';
import '@fontsource-variable/yanone-kaffeesatz';
import fontYanoneKaffeesatz from '@fontsource-variable/yanone-kaffeesatz/files/yanone-kaffeesatz-latin-wght-normal.woff2';

export type Props = {
  title: string;
  description?: string;
  favicon?: string;
  coverImage?: string | ImageMetadata;
};

const {
  title = 'Zak Johnson',
  description = 'Whiskey, ginger, & a dash of bitters.',
  favicon = '/favicon.svg',
  coverImage,
}: Props = Astro.props;

// TODO: this feels like a hack. I'm only using it for index right now; maybe just default.
const coverImageMetadata =
  typeof coverImage === 'string'
    ? (await import(coverImage /* @vite-ignore */)).default
    : coverImage;
const coverImageSrc = coverImageMetadata?.src;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title} · zakj.net</title>
    <meta name="author" content="Zak Johnson" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta property="og:title" content={`${title} · zakj.net`} />
    <meta property="og:type" content="webpage" />
    <meta property="og:url" content={Astro.url} />
    {coverImageSrc ? <meta property="og:image" content={coverImageSrc} /> : ''}

    <link rel="icon" href={favicon} type="image/svg+xml" />
    <!-- <link rel="apple-touch-icon" href="icon.png" /> -->

    <meta
      name="theme-color"
      content="#fff"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#222"
      media="(prefers-color-scheme: light)"
    />

    <PreloadFont src={fontCrimsonPro} />
    <PreloadFont src={fontYanoneKaffeesatz} />
    <slot name="extra-head" />
  </head>

  <body class="loading no-js">
    <script is:inline>
      document.body.classList.remove('no-js');
      document.fonts.ready.then(() =>
        document.body.classList.remove('loading'),
      );
    </script>
    <slot />

    <style is:global>
      :root {
        --color-black: #222;
        --color-white: #fff;
        --color-bg: var(--color-white);
        --color-text: var(--color-black);
        --color-underline: rgba(34, 34, 34, 0.2);
        --font-family-body: Crimson Pro Variable, serif;
        --font-family-display: Yanone Kaffeesatz Variable, sans-serif;

        background: var(--color-bg);
        color: var(--color-text);
        font-size: 17px;
        font-family: var(--font-family-body);
      }

      h1,
      h2,
      h3 {
        font-family: var(--font-family-display);
        text-transform: uppercase;
        /* TODO: lacks browser support */
        text-wrap: pretty;
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --color-bg: var(--color-black);
          --color-text: var(--color-white);
          --color-underline: rgba(255, 255, 255, 0.2);
        }
      }

      @media screen and (min-width: 750px) {
        :root {
          font-size: 28px;
        }
      }

      a {
        color: inherit;
        text-decoration-thickness: 0.07em;
        text-underline-position: from-font;
        transition: text-decoration-color 150ms ease-in-out;
        text-decoration-color: var(--color-underline);
      }
      a:hover {
        text-decoration-color: inherit;
      }
      body.loading:not(.no-js) a {
        text-decoration-line: none;
      }
    </style>
  </body>
</html>
