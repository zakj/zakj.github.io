---
export interface Props {
  title: string;
  description?: string;
}

const {
  title = 'Zak Johnson',
  description = 'Whiskey ginger & a dash of bitters.',
} = Astro.props;

import '$reset.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title} · zakj.net</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta property="og:title" content="{title} · zakj.net" />
    <meta property="og:type" content="" />
    <meta property="og:url" content="" />
    <meta property="og:image" content="" />

    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" href="/icon.svg" type="image/svg+xml" />
    <!-- <link rel="apple-touch-icon" href="icon.png" /> -->

    <!-- <link rel="manifest" href="site.webmanifest" /> -->
    <meta
      name="theme-color"
      content="#fff"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#222"
      media="(prefers-color-scheme: light)"
    />
  </head>

  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-black: #222;
    --color-white: #fff;
    --color-bg: var(--color-white);
    --color-text: var(--color-black);
    --color-underline: rgba(34, 34, 34, 0.2);

    background: var(--color-bg);
    color: var(--color-text);
    font-size: 17px;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --color-bg: var(--color-black);
      --color-text: var(--color-white);
      --color-underline: rgba(255, 255, 255, 0.2);
    }
  }

  @media screen and (min-width: 750px) {
    :root {
      font-size: 28px;
    }
  }

  a {
    color: inherit;
    text-decoration-color: var(--color-underline);
    text-decoration-thickness: 0.07em;
    text-underline-position: from-font;
    transition: text-decoration-color 150ms ease-in-out;
  }
  a:hover {
    text-decoration-color: inherit;
  }
</style>
